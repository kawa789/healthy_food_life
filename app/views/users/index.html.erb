<div>
 <h2>Users</h2>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>

   <tbody>
   <% @users.each do |user| %>
     <tr>
       <td>
        <p><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
       </td>
       <td>
        <p><%= user.name %></p>
       </td>
       <td>
        <p><%= link_to"Show",user_path(user.id) %></p>
       </td>
     </tr>
   <% end %>
   </tbody>
  </table>
</div>