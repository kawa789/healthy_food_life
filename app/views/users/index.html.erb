<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render 'users/userinfo' %>
        <%= render 'foods/newfood', food_new: @food_new %>

      </div>

      <div class="col-md-8 offset-md-1">
        <h1>Users</h1>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>ユーザー名</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <p><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %></p>
              </td>
              <td>
                <p><%= user.name %></p>
              </td>
              <td>
                <p><%= link_to"Show",user_path(user.id) %></p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>