
 <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>ユーザー情報</h2>
         <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>

        <h2 class="mt-3">新規投稿</h2>
        <%= form_with model: @food_new, local:true do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        <h4>本文</h4>
        <%= f.text_area :body %>
        <%= f.submit "投稿する" %>
        <% end %>

      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Healthy foods</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>本文</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @foods.each do |food| %>
            <tr>
              <td>
                <%= link_to user_path(food.user_id) do %>
                <%= attachment_image_tag food.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to food_path(food.id) do %>
                <p><%= food.title %></p>
                <% end %>
              </td>
              <td>
                <p><%= food.body %></p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>