
 <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

       <%= render 'users/userinfo' %>

       <%= render 'foods/newfood', food_new: @food_new %>

      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Healthy foods</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>本文</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @foods.each do |food| %>
            <tr>
              <td>
                <%= link_to user_path(food.user) do %>
                <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
                <% end %>
              </td>
              <td>
                <%= link_to food_path(food) do %>
                <p><%= food.title %></p>
                <% end %>
              </td>
              <td>
                <p><%= food.body %></p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>