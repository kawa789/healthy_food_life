<h1>新規投稿</h1>

<% if @food.errors.any? %>
 <%= @food.errors.count %>件のエラーが発生しました。
 <% @food.errors.full_messages.each do |message| %>
  <%= message %>
 <% end %>
<% end %>

<%= form_with model:@food, local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

<% end %>