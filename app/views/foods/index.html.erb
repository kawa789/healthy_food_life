 <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render 'users/userinfo' %>
        <%= render 'foods/newfood', food_new: @food_new %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Healthy Foods</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @foods.each do |food| %>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag food.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to food_path(food.id) do %>
                <p><%= food.title %></p>
                <% end %>
              </td>
              <td>
                <p><%= food.body %></p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>